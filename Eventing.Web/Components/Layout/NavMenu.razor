<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon" />
    <label for="navmenu-toggle" class="navmenu-icon">
        <FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill" />
    </label>
    <nav class="sitenav" aria-labelledby="main-menu">
        <FluentNavMenu Id="main-menu" Collapsible="true" Width="250" Title="Navigation menu" @bind-Expanded="_expanded" CustomToggle="true">

            <FluentNavLink Href="/" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Home())" IconColor="Color.Accent">
                Home
            </FluentNavLink>

            <FluentNavLink Href="/events" Icon="@(new Icons.Regular.Size20.Calendar())" IconColor="Color.Accent">
                Events
            </FluentNavLink>

            <FluentNavLink Href="/speakers" Icon="@(new Icons.Regular.Size20.PeopleCommunity())" IconColor="Color.Accent">
                Speakers
            </FluentNavLink>

            <FluentNavLink Href="/about" Icon="@(new Icons.Regular.Size20.Info())" IconColor="Color.Accent">
                About
            </FluentNavLink>

            <FluentNavLink Href="/contact" Icon="@(new Icons.Regular.Size20.Call())" IconColor="Color.Accent">
                Contact
            </FluentNavLink>

        </FluentNavMenu>
    </nav>
</div>

@code {
    private bool _expanded = true;
}
